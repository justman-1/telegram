<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<link rel="stylesheet" type="text/css" href="/in.css">
	<link rel="shotcur icon" type="image/png" href="/logo.png">
	<title>Sign up</title>
</head>
<body>
	<div class="exit"><a href="/" style="color: #398FD0; font-size: 55px; position: fixed; bottom: 40px; left: 40px; text-decoration: none">Exit</a></div>
	<div class="first"></div>
	<div class="second"></div>
	<div class="user">
		<div style="height: 150px">
			<img class="ava" src="/user.png">
		    <img src="" class="ava2">
		    <div class="login"><%=login%></div><br>
		</div>
		<div style="width: 100%">
			<form action="/feed" method="post" class="formSend">
			    <input type="text" name="login" value="<%=login%>" class="text">
			    <input type="text" name="password" value="<%=pass%>" class="text pass">
			    <input type="submit" value="Sign in" class="send">
		    </form>
		</div>
	</div>
	<img src="/logo.png" class="logo">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script>
	let encode = (text)=>{
	    return encodeURIComponent(text)
    }
	let req = new XMLHttpRequest()
	req.open("GET", '/getMyImage', false)
	req.setRequestHeader("login", encode('<%=login%>'))
	req.send()

	let photo = req.responseText
	if(photo != 'none'){
		$(".ava").css({
			'display': 'none'
		})
		$(".ava2").attr("src", '/' + photo);
		$(".ava2").css({
			'display': 'block'
		})
	}
	localStorage.setItem('user', JSON.stringify({login: $(".text").val(), password: $(".pass").val()}));
</script>
</body>
</html>